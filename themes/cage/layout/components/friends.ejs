<%- css("css/cage-friends") %>
<% if (Array.isArray(theme.friends)) { %>
<div style="display: flex; flex-wrap: wrap; width: 100%; position: relative;">
  <% theme.friends.forEach(friend => { %>
    <div class="cage-friends-friendWrapper">
      <a href="<%= friend.link %>" target="_blank" class="friend-btn">
        <div class="cage-friends-avatarWrapper" style="height: 65px; min-width: 65px; width: 65px;">
          <img src="<%= friend.avatar %>" class="disabled-cage-image" />
        </div>
        <div class="cage-friends-blogName" style="width: 100%;"><%= friend.name %></div>
      </a>
    </div>
  <% }) %>
</div>
<hr />
<% } %>
